    <div class="map-container">
        <h1 class="map-title">Wilayah Konservasi Taman Nasional Ujung Kulon</h1>
        <div id="map"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const map = L.map('map').setView([-6.7777, 105.3721], 10);
            
            const layers = {
                topo: L.tileLayer('https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png', {
                    attribution: '© OpenStreetMap contributors, © OpenTopoMap'
                }),
                satellite: L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
                    attribution: '© Esri'
                }),
                street: L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '© OpenStreetMap contributors'
                })
            };
            
            layers.topo.addTo(map);
            
            // Add custom controls
            const controlDiv = document.createElement('div');
            controlDiv.className = 'map-controls';
            controlDiv.innerHTML = `
                <button class="map-type-btn active" data-type="topo">Topografi</button>
                <button class="map-type-btn" data-type="satellite">Satelit</button>
                <button class="map-type-btn" data-type="street">Jalan</button>
            `;
            map.getContainer().appendChild(controlDiv);
            
            const locations = [
                {
                    name: 'Taman Nasional Ujung Kulon',
                    lat: -6.7777,
                    lng: 105.3721,
                    desc: 'Taman nasional dengan kekayaan biodiversitas tinggi. Kawasan ini mencakup ekosistem pesisir yang kaya, hutan mangrove, terumbu karang, dan berbagai spesies flora fauna langka.',
                    moreInfo: 'https://id.wikipedia.org/wiki/Taman_Nasional_Ujung_Kulon'
                }
            ];
            
            locations.forEach(loc => {
                const marker = L.marker([loc.lat, loc.lng]).addTo(map);
                
                const popupContent = `
                    <div class="popup-content">
                        <div class="popup-info">
                            <h3>${loc.name}</h3>
                            <p>${loc.desc}</p>
                        </div>
                        <div class="popup-links">
                            <a href="https://www.google.com/maps/dir/?api=1&destination=${loc.lat},${loc.lng}" 
                               class="popup-button directions-btn" 
                               target="_blank">
                                Petunjuk Arah
                            </a>
                            <a href="${loc.moreInfo}" 
                               class="popup-button more-info-btn"
                               target="_blank">
                                Info Lebih Lanjut
                            </a>
                        </div>
                    </div>
                `;
                
                marker.bindPopup(popupContent, {
                    maxWidth: 400,
                    className: 'custom-popup'
                });
            });
            
            const mapButtons = controlDiv.querySelectorAll('.map-type-btn');
            mapButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    const type = e.target.dataset.type;
                    
                    mapButtons.forEach(btn => btn.classList.remove('active'));
                    e.target.classList.add('active');
                    
                    Object.values(layers).forEach(layer => map.removeLayer(layer));
                    layers[type].addTo(map);
                });
            });
        });
    </script>
