<!DOCTYPE html>
<html>
<head>
    <title>Register Pesisir</title>
</head>
<link rel="stylesheet" href="/register.css">
<body>
    <!-- Gelombang Background -->
    <div class="wave"></div>
    <div class="wave"></div>
    <div class="wave"></div>

    <!-- Elemen Dekoratif -->
    <div class="mangrove" style="left: 5%;"></div>
    <div class="mangrove" style="left: 85%;"></div>
    <div class="seagrass" style="left: 15%;"></div>
    <div class="seagrass" style="left: 75%;"></div>
    <div class="seagrass" style="left: 90%;"></div>

    <!-- Container Register -->
    <div class="register-container">
        <h2>Daftar Akun Baru</h2>
        <form action="/register" method="POST">
            <div class="input-group">
                <label>Username:</label>
                <input type="text" name="username" required placeholder="Buat username baru">
            </div>
            <div class="input-group">
                <label>Password:</label>
                <input type="password" name="password" required placeholder="Buat password">
            </div>
            <button type="submit">Daftar</button>
        </form>
        <p class="message"><%= message %></p>
        <p class="message">Sudah punya akun? <a href="/login" style="color: #6dd5ed; text-decoration: none;">Login di sini</a></p>
    </div>

    <!-- Animasi Penyu -->
    <svg class="turtle" style="top: 40%" width="100" height="60" viewBox="0 0 100 60">
        <path fill="#2d6a4f" d="M40,30 Q50,0 60,30 L80,30 Q90,30 90,40 Q90,50 80,50 L20,50 Q10,50 10,40 Q10,30 20,30 Z"/>
        <circle fill="#1a472a" cx="50" cy="30" r="15"/>
        <path fill="#2d6a4f" d="M45,50 L55,50 L50,60 Z"/>
    </svg>

    <script>
        // Tambahkan penyu secara dinamis
        function createTurtle() {
            const turtle = document.createElement('div');
            turtle.className = 'turtle';
            turtle.style.top = Math.random() * 60 + '%';
            document.body.appendChild(turtle);
            
            turtle.addEventListener('animationend', () => {
                turtle.remove();
            });
        }

        setInterval(createTurtle, 8000);
    </script>
</body>
</html>