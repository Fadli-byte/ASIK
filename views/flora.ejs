                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate');
                        observer.unobserve(entry.target);
                    } else {
                        entry.target.classList.remove('animate');
                    }
                });
            }, { rootMargin: '0px 0px -200px 0px' });
            cards.forEach(card => {
                observer.observe(card);
            });
