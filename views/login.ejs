<!DOCTYPE html>
<html>
<head>
    <title>Login Pesisir</title>
    <link rel="stylesheet" href="/login.css">
</head>
<body>
    <!-- Gelombang Background -->
    <div class="wave"></div>
    <div class="wave"></div>
    <div class="wave"></div>

    <!-- Elemen Dekoratif -->
    <div class="coral" style="left: 10%;"></div>
    <div class="coral" style="left: 80%;"></div>
    <div class="seaweed" style="left: 5%;"></div>
    <div class="seaweed" style="left: 85%;"></div>
    <div class="seaweed" style="left: 92%;"></div>
    <div class="login-container">
        <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
            <div class="logo">
                <img src="/public/images/bg_fik.png" alt="Logo Pesisir" style="width: 100px; height: 100px; object-fit: contain; border-radius: 50%; box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);">
            </div>
            <h2 style="margin-left: 20px;">Selamat Datang</h2>
        </div>
        <form action="/login" method="POST">
            <div class="input-group">
                <label>Username:</label>
                <input type="text" name="username" required placeholder="Masukkan username">
            </div>
            <div class="input-group">
                <label>Password:</label>
                <input type="password" name="password" required placeholder="Masukkan password" id="password">
                <i class="far fa-eye" id="togglePassword" style="cursor: pointer;" onclick="togglePasswordVisibility()"></i>
            </div>
            <script>
                function togglePasswordVisibility() {
                    const passwordInput = document.getElementById('password');
                    const toggleIcon = document.getElementById('togglePassword');
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        toggleIcon.classList.remove('fa-eye');
                        toggleIcon.classList.add('fa-eye-slash');
                    } else {
                        passwordInput.type = 'password';
                        toggleIcon.classList.remove('fa-eye-slash');
                        toggleIcon.classList.add('fa-eye');
                    }
                }
            </script>
            <button type="submit">Masuk</button>
        </form>
        <p class="message"><%= message %></p>
        <p class="message">Belum punya akun? <a href="/register" class="register-link">Daftar di sini</a></p>
    </div>

    <!-- Animasi Ikan -->
    <svg class="fish" style="top: 30%" width="50" height="30" viewBox="0 0 50 30">
        <path fill="#fff" d="M45,15 L35,25 L10,25 C0,25 0,5 10,5 L35,5 L45,15" />
        <circle fill="#000" cx="38" cy="15" r="2" />
    </svg>
    <svg class="fish" style="top: 50%" width="50" height="30" viewBox="0 0 50 30">
        <path fill="#fff" d="M45,15 L35,25 L10,25 C0,25 0,5 10,5 L35,5 L45,15" />
        <circle fill="#000" cx="38" cy="15" r="2" />
    </svg>

    <script>
        // Tambahkan ikan secara dinamis
        function createFish() {
            const fish = document.createElement('div');
            fish.className = 'fish';
            fish.style.top = Math.random() * 70 + '%';
            document.body.appendChild(fish);
            
            // Hapus ikan setelah animasi selesai
            fish.addEventListener('animationend', () => {
                fish.remove();
            });
        }

        // Buat ikan baru setiap beberapa detik
        setInterval(createFish, 5000);
    </script>
</body>
</html>

